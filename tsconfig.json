{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "lib": [
        "es6"
      ]
    },
    "include": [
      "src/**/*",
      "tests/**/*"
    ],
    "exclude": [
      "./node_modules/*"
    ]
  }
  